# SBSS Environment Variables
<%
  sbss_db_scheme = p('sbss.sbss_db.db_scheme')
  sbss_db_address = p('sbss.sbss_db.address')
  sbss_db_port = p('sbss.sbss_db.port')
  sbss_db_role = p_arr('sbss.sbss_db.roles').find { |role| role['tag'] == 'sbssdb' or role['tag'] == 'default'} 
  sbss_db_database = p_arr('sbss.sbss_db.databases').find { |database| database['tag'] == 'sbssdb' or database['tag'] == 'default'}
  
  sbss_restricted_dbuser_name = p('sbss.restricted_dbuser_name')
  sbss_restricted_dbuser_password = p('sbss.restricted_dbuser_password')
  
  sbss_db_url = sbss_db_scheme + "://" + sbss_restricted_dbuser_name + ":" + sbss_restricted_dbuser_password + "@" + sbss_db_address + ":" + sbss_db_port.to_s + "/" + sbss_db_database['name'] + "?sslmode=disable"
%>
export SBSS_DB_URL="<%= sbss_db_url %>"