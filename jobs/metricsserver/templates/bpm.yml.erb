processes:
  - name: metricsserver
    executable: /var/vcap/packages/metricsserver/metricsserver
    args:
      - -c
      - /var/vcap/jobs/metricsserver/config/metricsserver.yml
    env:
      DT_MONITOR: true
      DT_APPLICATIONID: metricsserver
    hooks:
      pre_start: /var/vcap/jobs/metricsserver/bin/bpm-pre-start
