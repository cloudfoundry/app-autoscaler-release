processes:
  - name: scheduler
    executable: /var/vcap/packages/openjdk-17/bin/java
    args:
      - -Dspring.config.location=/var/vcap/jobs/scheduler/config/scheduler.yml
      - -jar
      - /var/vcap/packages/scheduler/scheduler-1.0-SNAPSHOT.war
    env:
      DT_MONITOR: true
      DT_APPLICATIONID: scheduler
    hooks:
      pre_start: /var/vcap/jobs/scheduler/bin/bpm-pre-start
