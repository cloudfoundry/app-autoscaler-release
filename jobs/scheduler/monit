<%
  require 'erb'

  health_url = "http://#{p('autoscaler.scheduler.health.username')}:#{p('autoscaler.scheduler.health.password')}@localhost:#{p('autoscaler.scheduler.health.port')}"
  health_url_encoded = url_encode(health_url)
%>

check host scheduler with address localhost
  if failed url <%=health_url_encoded%>
     timeout 30 seconds
     then restart

  start program "/var/vcap/jobs/bpm/bin/bpm start scheduler"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop scheduler"
  group vcap