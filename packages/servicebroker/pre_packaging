set -e -x

source common/node-helper.sh

# Setup NPM
setup_npm

cd ${BUILD_DIR}/app-autoscaler/servicebroker && npm install

# Installing sap plan check and quota check api node modules
npm install git+https://github.infra.hana.ondemand.com/autoscaler/node-planapi.git
npm install git+https://github.infra.hana.ondemand.com/autoscaler/node-generic-quotaapi.git

# Clean up NPM
rm -rf common/node-helper.sh
cleanup_npm
