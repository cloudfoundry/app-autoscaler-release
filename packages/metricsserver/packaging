set -e -x

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export PATH=$GOROOT/bin:$PATH
export GOPATH=${BOSH_COMPILE_TARGET}/app-autoscaler
export GOCACHE=/tmp/gocache

pushd ${BOSH_COMPILE_TARGET}/app-autoscaler/src/autoscaler
  make build-metricsserver
popd

cp -a ${BOSH_COMPILE_TARGET}/app-autoscaler/src/autoscaler/build/metricsserver ${BOSH_INSTALL_TARGET}
cp -a ${BOSH_COMPILE_TARGET}/app-autoscaler/src/autoscaler/metricsserver/db/metricscollector.db.changelog.yml ${BOSH_INSTALL_TARGET}
