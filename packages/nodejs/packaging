set -e

# Make sure we can see uname
export PATH=$PATH:/bin:/usr/bin

#unpack Nodejs - we support Mac OS 64bit and Linux 64bit
if [ `uname` = "Darwin" ]; then
  mkdir -p node
  pushd node
  tar xvf ../nodejs/node-v8.11.4-darwin-x64.tar.gz --strip-components=1
elif [ `uname` = "Linux" ]; then
  mkdir -p node
  pushd node
  tar xvf ../nodejs/node-v8.11.4-linux-x64.tar.xz  --strip-components=1
else
   echo "Non Linux/Darwin based OS not supported"
fi
popd

cp -R node/* ${BOSH_INSTALL_TARGET}


