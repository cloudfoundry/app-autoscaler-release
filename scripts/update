#! /usr/bin/env bash

set -euo pipefail

pushd src/autoscaler
  go mod tidy
  go mod download
  go mod vendor
popd

pushd src/changeloglockcleaner
  go mod tidy
  go mod download
  go mod vendor
popd

pushd src/acceptance
  go mod tidy
  go mod vendor
popd

pushd src/db
  mvn --no-transfer-progress package -DskipTests
popd

pushd src/scheduler
  mvn --no-transfer-progress package -DskipTests
popd
